<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/qpartywindow"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cns.utexas.QProject.PartyStartActivity" >

    <Button
        android:id="@+id/pause_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/start_song_list"
        android:layout_marginBottom="15dp"
        android:layout_toRightOf="@+id/imageView1"
        android:background="@drawable/androidbutton"
        android:text="Start Playing Party List"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/host_add_button"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="11dp"
        android:text="Code: dkt99"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF" />

    <ListView
        android:id="@+id/start_song_list"
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:layout_alignLeft="@+id/code"
        android:layout_below="@+id/code"
        android:layout_marginTop="12dp" >
    </ListView>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/pause_button"
        android:layout_alignLeft="@+id/start_song_list"
        android:layout_alignTop="@+id/pause_button"
        android:layout_marginLeft="24dp"
        android:adjustViewBounds="true"
        android:maxHeight="40dp"
        android:maxWidth="40dp"
        android:src="@drawable/qlogo" />

</RelativeLayout>
